# Environment Configuration
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control

# ===================
# WordPress Settings
# ===================

# Environment type: development, staging, production
WP_ENV=development

# WordPress base URL for testing
WP_BASE_URL=http://localhost:8080

# WordPress admin credentials (for automated testing)
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=password

# Database configuration (if needed for testing)
DB_NAME=wordpress_test
DB_USER=root
DB_PASSWORD=password
DB_HOST=localhost

# ===================
# Testing Settings
# ===================

# Playwright settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Test timeout (milliseconds)
TEST_TIMEOUT=30000

# ===================
# Build Settings
# ===================

# Enable source maps in production build
GENERATE_SOURCEMAP=true

# Enable minification
ENABLE_MINIFICATION=true

# ===================
# Development Settings
# ===================

# Enable debug mode
DEBUG=false
DEBUG_LOG=false

# Enable verbose logging
VERBOSE=false

# ===================
# API Keys & Secrets
# ===================
# Never commit actual keys - use environment variables or secret managers

# Example API key (replace with actual key)
# API_KEY=your_api_key_here

# Example secret (replace with actual secret)
# API_SECRET=your_api_secret_here

# ===================
# CI/CD Settings
# ===================

# Skip certain checks in CI
SKIP_PREFLIGHT_CHECK=false

# CI environment flag
CI=false

# ===================
# Security
# ===================
# Never commit secrets. Use environment variables or secret managers.
# Consider using services like:
# - GitHub Secrets
# - AWS Secrets Manager
# - HashiCorp Vault
# - Azure Key Vault

